@model MiBarberiaApp.Models.Turno

@{
    ViewData["Title"] = "Reservar Turno";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewData["Title"]</h1>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Complete los datos para reservar</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Reservar" id="reservaForm">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                        <!-- Selección de Servicio -->
                        <div class="form-group mb-3">
                            <label asp-for="ServicioId" class="form-label">Servicio:</label>
                            <select asp-for="ServicioId" class="form-control" id="servicioSelect" required>
                                <option value="">-- Seleccione un servicio --</option>
                                @foreach (var servicio in ViewBag.Servicios as SelectList)
                                {
                                    <option value="@servicio.Value">@servicio.Text</option>
                                }
                            </select>
                            <span asp-validation-for="ServicioId" class="text-danger"></span>
                        </div>

                        <!-- Selección de Barbero -->
                        <div class="form-group mb-3">
                            <label asp-for="BarberoId" class="form-label">Barbero:</label>
                            <select asp-for="BarberoId" class="form-control" id="barberoSelect" required>
                                <option value="">-- Seleccione un barbero --</option>
                                @foreach (var barbero in ViewBag.Barberos as SelectList)
                                {
                                    <option value="@barbero.Value">@barbero.Text</option>
                                }
                            </select>
                            <span asp-validation-for="BarberoId" class="text-danger"></span>
                        </div>

                        <!-- Selección de Fecha -->
                        <div class="form-group mb-3">
                            <label for="fechaSelect" class="form-label">Fecha:</label>
                            <input type="date" id="fechaSelect" name="Fecha" class="form-control"
                                   min="@DateTime.Today.ToString("yyyy-MM-dd")" required />
                            <span class="text-danger field-validation-valid" data-valmsg-for="Fecha" data-valmsg-replace="true"></span>
                        </div>

                        <!-- Spinner de carga -->
                        <div id="loadingSpinner" class="text-center my-3" style="display: none;">
                            <div class="spinner-border text-primary" role="status">
                                <span class="visually-hidden">Cargando...</span>
                            </div>
                            <p class="mt-2">Buscando horarios disponibles...</p>
                        </div>

                        <!-- Horarios Disponibles -->
                        <div class="form-group mb-3" id="horarioGroup" style="display: none;">
                            <label for="horaInicioSelect" class="form-label">Horario Disponible:</label>
                            <select id="horaInicioSelect" name="HoraInicio" class="form-control" required>
                                <option value="">-- Seleccione un horario --</option>
                            </select>
                            <small id="duracionServicio" class="form-text text-muted" style="display: none;">
                                Duración estimada: <span id="tiempoDuracion"></span> minutos
                            </small>
                            <small class="form-text text-muted">Horario de atención: 14:00 a 18:00 hs</small>
                            <span class="text-danger field-validation-valid" data-valmsg-for="HoraInicio" data-valmsg-replace="true"></span>
                        </div>

                        <!-- Botón de Reserva -->
                        <div class="form-group mt-4">
                            <button type="submit" class="btn btn-primary w-100 py-2">
                                <i class="bi bi-calendar-check"></i> Confirmar Reserva
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script>
        $(document).ready(function() {
            var servicioDuracion = {};

            // Cargar duraciones de servicios al inicio
            $.get('/Turno/GetServiciosDuracion')
                .done(function(data) {
                    servicioDuracion = data;
                })
                .fail(function() {
                    console.error("Error al cargar duraciones de servicios");
                });

            // Cuando cambian los selects principales
            $('#servicioSelect, #barberoSelect, #fechaSelect').change(function() {
                var servicioId = $('#servicioSelect').val();
                var barberoId = $('#barberoSelect').val();
                var fecha = $('#fechaSelect').val();

                if (!servicioId || !barberoId || !fecha) {
                    $('#horarioGroup').hide();
                    $('#duracionServicio').hide();
                    return;
                }

                // Mostrar duración del servicio seleccionado
                if (servicioId in servicioDuracion) {
                    $('#duracionServicio').show();
                    $('#tiempoDuracion').text(servicioDuracion[servicioId]);
                } else {
                    $('#duracionServicio').hide();
                }

                // Validar fecha
                if (!validarFecha(fecha)) {
                    return;
                }

                // Cargar horarios disponibles
                cargarHorariosDisponibles(servicioId, barberoId, fecha);
            });

            // Validación personalizada del formulario
            $('#reservaForm').submit(function(e) {
                if (!$('#horaInicioSelect').val()) {
                    e.preventDefault();
                    alert('Por favor seleccione un horario disponible.');
                    $('#horaInicioSelect').focus();
                }
            });
        });

        function validarFecha(fecha) {
            const fechaObj = new Date(fecha);
            const hoy = new Date();
            hoy.setHours(0, 0, 0, 0);

            if (fechaObj < hoy) {
                $('#horarioGroup').hide();
                alert('No puede seleccionar una fecha pasada.');
                return false;
            }

            if (fechaObj.getDay() === 0) { // Domingo
                $('#horarioGroup').hide();
                alert('La barbería no abre los domingos. Por favor seleccione otro día.');
                return false;
            }

            return true;
        }

        function cargarHorariosDisponibles(servicioId, barberoId, fecha) {
            $('#loadingSpinner').show();
            $('#horarioGroup').hide();

            $.get('/Turno/GetHorariosDisponibles', {
                barberoId: barberoId,
                fecha: fecha,
                servicioId: servicioId
            })
            .done(function(data) {
                const select = $('#horaInicioSelect');
                select.empty().append('<option value="">-- Seleccione un horario --</option>');

                if (data.length > 0) {
                    data.forEach(item => {
                        select.append(new Option(item.horaDisplay, item.horaValue));
                    });
                    $('#horarioGroup').show();
                } else {
                    alert('No hay horarios disponibles para la fecha seleccionada. Por favor elija otra fecha.');
                }
            })
            .fail(function() {
                alert('Error al cargar los horarios disponibles. Por favor intente nuevamente.');
            })
            .always(function() {
                $('#loadingSpinner').hide();
            });
        }
    </script>
}